<form action="/">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="back to root">
</form> <br> <br> <br>

<div class="categories-toggler">
  
<ul class="large-text">
<% @categories.each do |category| %>
  <li>
    <% if category.hidden %>
      <a href="/category_toggler?cmd=toggle&category_id=<%= category.id %>">Show</a>
    <% else %>
      <a href="/category_toggler?cmd=toggle&category_id=<%= category.id %>">Hide</a>
    <% end %>
    <%= category.name %>
  </li>
<% end %>
</ul>

</div>

