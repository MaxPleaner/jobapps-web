<% if @companies %>

<!--  -->
<!-- Companies List View -->
<!--  -->

  <% @companies.each do |company| %>
    <pre class="company">
      <%= raw company.attributes.ai(html: true).html_safe %>
    </pre>
  <% end %>

<!--  -->
<!--  -->

<% elsif @company %>

<!--  -->
<!-- Company Show View -->
<!--  -->
  
  <div class="row">
    <div class="col-xs-12">
      <a href="/?id=<%= Company.where("id < ?", @company.id).blank.first&.id || Company.blank.order(id: :desc).first&.id %>">Previous company</a> <br>      
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <a href="/?id=<%= Company.where("id > ?", @company.id).blank.first&.id || Company.blank.first&.id %>">Next company</a> <br>
    </div>
  </div>
  <br>

  <div class="row">
    <pre class="company">
      <%= raw @company.attributes.ai(html: true).html_safe %>
    </pre>
  </div>  
  <br>
