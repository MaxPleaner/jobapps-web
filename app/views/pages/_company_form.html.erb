<% @company = company || Company.new %>
<form class="large-text" action="/update?cmd=add_company" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if @company.persisted? %>
    <input type="hidden" name="id" value="<%= @company.id%>">
  <% end %>
  <input type="text" name="name" value="<%= @company.name %>" placeholder="name"> <br>
  <textarea name="desc" placeholder="description"><%= @company.desc %></textarea> <br>
  <textarea name="jobs" placeholder="jobs"><%= @company.jobs %></textarea> <br>
  <textarea name="applied" placeholder="applied"><%= @company.applied %></textarea> <br>
  <textarea name="rejected" placeholder="rejected"><%= @company.rejected %></textarea> <br>
  <textarea name="skip" placeholder="skip"><%= @company.skip %></textarea> <br>
  <textarea name="todo" placeholder="todo"><%= @company.todo %></textarea> <br>
  <input type="text" name="category" value="<%= @company.category %>" placeholder="category"> <br>
  <input type="submit" value="<%= @company.persisted? ? 'edit company' : 'add company' %>">
</form>
